{
	"name": "agentic-usage-monitor",
	"version": "0.1.0",
	"description": "Real-time Claude rate limit monitoring tool for AI coding agents",
	"type": "module",
	"bin": {
		"usage-monitor": "./dist/cli.js",
		"opencode-with-monitor": "./bin/opencode-with-monitor",
		"with-monitor": "./bin/with-monitor",
		"usage-monitor-setup": "./bin/setup"
	},
	"files": ["dist", "bin"],
	"scripts": {
		"build": "bun build src/cli/index.ts --outfile dist/cli.js --target bun",
		"build:cli": "bun build src/cli/index.ts --outfile dist/cli.js --target bun",
		"cli": "bun run src/cli/index.ts",
		"cli:once": "bun run src/cli/index.ts --once",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"test": "bun test",
		"test:e2e": "bun test test/e2e",
		"test:e2e:docker": "docker compose run --rm e2e",
		"test:e2e:report": "mkdir -p test-results && bun test test/e2e 2>&1 | tee test-results/output.txt && bun run test/harness/generate-report.ts",
		"mock-server": "bun run test/mock-server/oauth-server.ts",
		"prepublishOnly": "bun run typecheck && bun run lint && bun run build"
	},
	"keywords": ["opencode", "claude", "anthropic", "rate-limits", "usage", "monitoring"],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/user/agentic-usage-monitor"
	},
	"dependencies": {
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@types/bun": "latest",
		"typescript": "^5.7.0"
	}
}
